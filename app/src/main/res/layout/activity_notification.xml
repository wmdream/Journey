<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.journey.activity.ActivityCompA"
    android:id="@+id/layout_main">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/my_toolbar"
        android:id="@id/my_toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@id/notification_choose_ringtone"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/activity"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="@dimen/space_8"
            android:onClick="onClick"
            android:layout_height="wrap_content">

            <TextView
                android:background="@null"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:textColor="@color/primary"
                android:text="选择铃声"
                android:layout_width="0dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:paddingRight="16dp"
                android:text="默认"
                android:background="@color/activity"
                android:textColor="@color/primary"
                android:id="@id/tv_notification_sounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@id/notification_send"
            android:text="@string/notification_send"
            style="@style/module_tv_item"
            android:layout_marginTop="@dimen/space_8"/>

    </LinearLayout>
</LinearLayout>

